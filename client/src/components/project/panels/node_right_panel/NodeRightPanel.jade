.focus-rigth-panel(ng-click="cancelOverlay();", ng-show="beginOverlayRightPanel")
    .node-rigth-panel-overlay
        .animate-node-right(ng-if="showOverlay")
            .node-rigth-panel-container(ng-class="{transparent: hideContent}" style="padding-top:{{scrollPaddingTop}}px" dir-kill-tooltip-on-scroll)
                .animate-fade.node-rigth-panel(ng-click="$event.stopPropagation();", ng-if="showFocusNode && mapprSettings.nodeFocusRenderTemplate == 'node-right-panel'" )
                    .blackSection(ng-if="nodeRightInfo.section1.length" style="background-color: #cccccc; padding-top: 20px")
                        .section
                            .section-container(style="padding: 10px; display: flex; flex-wrap: wrap;")
                                .header
                                    p Selected Node
                                    .icons
                                        .right(ng-repeat="link in nodeRightInfo.section1" ng-if="link.type == 'link'")
                                            a(href="{{link.value}}")
                                                img(alt="{{link.value}}" src="{{link.icon}}")
                                        .right
                                            button(ng-click='cancelOverlay(); triggerInteraction();')
                                                i.fa.fa-times.fa-1-8x
                                .nameContainer(ng-repeat="info in nodeRightInfo.section1" ng-if="info.type == 'name'")
                                    .img-user
                                        img(src="https://ui-avatars.com/api/?rounded=true&color=FFFFFF&bold=true&size=42&name={{info.initials}}&background={{info.color}}")
                                    .nameSubcontainer
                                        p {{info.name}}
                                        p {{info.description}}
                    .section
                        .tabContainer
                            .tabVisible
                                .tab(ng-repeat="tab in nodeRightInfo.section2")
                                    button(ng-class="{active: sectionActive2==$index}", ng-click="activeTabs2($index)") {{tab.key}}
                        #description.tabcontent(ng-repeat="tab in nodeRightInfo.section2")
                            iframe(ng-if="tab.value.includes('http') && sectionActive2==$index" ng-src="{{ tab.value | trustUrl }}", id='iframe001', width="100%", height="200px" frameborder="0", webkitallowfullscreen, mozallowfullscreen, allowfullscreen)
                            p(ng-if="!tab.value.includes('http') && sectionActive2==$index") {{tab.value}}
                    .section(ng-if="nodeRightInfo.section3.length")
                        .tabContainer
                            .tabVisible
                                .tab(ng-repeat="tab in nodeRightInfo.section3")
                                    button(ng-class="{active: sectionActive3==$index}", ng-click="activeTabs3($index)") {{tab.key}}
                        .section-container(style="padding: 10px")
                            #tedtags.tabcontent(ng-repeat="tab in nodeRightInfo.section3")
                                .attr-renderers(ng-repeat="tag in tab.value" ng-if="sectionActive3==$index")
                                    .tooltip-positioner(tooltip-placement="right" tooltip-append-to-body="true" tooltip-is-open="openTooltip")
                                    .cat-info
                                    .cat-list.tag-cloud
                                        .cat-item(ng-mouseover="onSection3Hover(tab, tag)", ng-mouseleave="onSection3Leave()")
                                            .cat-highlight(style="opacity: 0;")
                                            .vert-align.cat-text-container
                                                div
                                                    .cat-text.no-margin.truncate {{tag}}
                    .blackSection(ng-if="nodeRightInfo.section4.length" style="background-color: #cccccc; padding-top: 20px")
                        .section(style="flex-flow: row wrap; ")
                            .section-container(style="padding: 10px; flex-wrap: wrap;")
                                #numberAndDates.tabcontent(ng-repeat="number in nodeRightInfo.section4" style="margin: 5px 10px")
                                    .number
                                        p {{number.key}}
                                        p {{number.value}}
                    .blackSection(ng-if="nodeRightInfo.section5.length" style="background-color: #cccccc; padding-top: 20px")
                        .section(style="flex-flow: row wrap; ")
                            .section-container(style="padding: 10px; flex-wrap: wrap; width: 100%")
                                #information.tabcontent(ng-repeat="number in nodeRightInfo.section5" style="margin: 5px 10px; width: 100%;")
                                    .information
                                        p {{number.key}}
                                        p {{number.value}}
                    .blackSection(style="background-color: #cccccc; padding: 20px 0")
                        .section(style="background-color: #efefef; padding: 20px")
                            .title(style="font-size: 16px; margin-bottom: 10px") Nearest Neightbors
                            div(dir-neighbors ng-include=' "#{server_prefix}#{view_path}/components/project/distributions/renderers/neighborsRightPanel.html" ')
    dir-focus-node(ng-show="false" ng-if="showFocusNode && mapprSettings.nodeFocusRenderTemplate != 'content'" node="focusNode" img-attr="nodeImageAttr" start="nodeStartData" end="nodeEndData" duration="175" ease="" finish="finishAnimation()")
    dir-focus-node(ng-if="showNeighborNode" node="neighborNode" img-attr="nodeImageAttr" start="neighborNodeStartData" end="neighborNodeEndData" duration="175" ease="" finish="finishNeighborAnimation()")