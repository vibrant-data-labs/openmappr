.focus-rigth-panel(ng-click="cancelOverlay();", ng-show="beginOverlayRightPanel")
  .node-rigth-panel-overlay
    .animate-node-right(ng-if="showOverlay")
      .animate-fade.node-rigth-panel-container( ng-if="showFocusNode && mapprSettings.nodeFocusRenderTemplate == 'node-right-panel'" ng-class="{transparent: hideContent}" style="padding-top:{{scrollPaddingTop}}px" dir-kill-tooltip-on-scroll)
        .node-rigth-panel.node-right-panel(ng-click="$event.stopPropagation();")
          section.section(ng-if="nodeRightInfo.section1.length")
            .section__header
              h3.section__title Selected Node
              .section__icons.icons
                .section__icons-icon(ng-repeat="link in nodeRightInfo.section1" ng-if="link.type == 'link'")
                  a(href="{{link.value}}" target="_blank" uib-tooltip="Go to {{link.tooltip}}" tooltip-placement="left" tooltip-append-to-body="true")
                    img(alt="{{link.value}}" src="{{link.icon}}")
                .section__icons-icon.close
                  button(ng-click='cancelOverlay(); triggerInteraction();')

            .section__content
              .nameContainer.user(ng-repeat="info in nodeRightInfo.section1" ng-if="info.type == 'name'")
                .img-user
                  img(ng-if="!info.imageShow", ng-src="https://ui-avatars.com/api/?rounded=true&color=FFFFFF&bold=true&size=42&name={{info.initials}}&background={{info.color}}")
                  div(ng-if="info.imageShow", style="cursor:pointer; background: url({{info.image}}); width: 45px; height: 45px; border-radius: 50%; background-size: cover; background-position: center;")
                .info-user
                  h6 {{info.name}}
                  p {{info.description}}

          section.section.section_tabs
            .tabContainer
              .tabVisible
                .tab(ng-repeat="tab in nodeRightInfo.section2")
                  button(ng-class="{active: sectionActive2==$index}", ng-click="activeTabs2($index)") {{tab.key}}

            .section__content
              #description.tabcontent(ng-repeat="tab in nodeRightInfo.section2")
                iframe(ng-if="tab.value.includes('http') && sectionActive2==$index" ng-src="{{ tab.value | trustUrl }}", id='iframe001', width="100%", height="200px" frameborder="0", webkitallowfullscreen, mozallowfullscreen, allowfullscreen)
                p(ng-if="!tab.value.includes('http') && sectionActive2==$index") {{tab.value}}

          section.section.section_tabs(ng-if="nodeRightInfo.section3.length")
            .tabContainer
              .tabVisible
                .tab(ng-repeat="tab in nodeRightInfo.section3")
                  button(ng-class="{active: sectionActive3==$index}", ng-click="activeTabs3($index)") {{tab.key}}
            .section__content
              #tedtags.tabcontent.tag-list(
                ng-repeat="sections in nodeRightInfo.section3"
                ng-if="sectionActive3==$index"
              )
                .tag-list__item(ng-repeat="tag in sections.value" )
                  .tooltip-positioner(tooltip-placement="right" tooltip-append-to-body="true" tooltip-is-open="openTooltip")
                  .cat-info
                  .cat-list.tag-cloud
                    .cat-item(style="cursor:pointer", ng-mouseover="onSectionHover(sections, tag)", ng-mouseleave="onSectionLeave()", ng-click="onSectionSelect(sections, tag)")
                      .cat-highlight(style="opacity: 0;")
                      .vert-align.cat-text-container
                        div
                          .cat-text.no-margin.truncate {{tag}}

          section.section(ng-if="nodeRightInfo.section4.length")
            .section-container(style="padding: 10px; display:flex; width: 100%; flex-wrap: wrap;")
              #numberAndDates.tabcontent(ng-repeat="number in nodeRightInfo.section4" style="width: {{Section4Largest}}px")
                .number
                  p {{number.key}}
                  p {{number.value}}

          section.section(ng-if="nodeRightInfo.section5.length")
            .section-container
              #information.tabcontent(ng-repeat="number in nodeRightInfo.section5")
                .information
                  p {{number.key}}
                  p {{number.value}}
          section.section
            .section__header
              h3.section__title Nearest Neightbors

            .section__content
              div(dir-neighbors ng-include=' "#{server_prefix}#{view_path}/components/project/distributions/renderers/neighborsRightPanel.html" ')

  dir-focus-node(ng-show="false" ng-if="showFocusNode && mapprSettings.nodeFocusRenderTemplate != 'content'" node="focusNode" img-attr="nodeImageAttr" start="nodeStartData" end="nodeEndData" duration="175" ease="" finish="finishAnimation()")
  dir-focus-node(ng-show="false" ng-if="showNeighborNode" node="neighborNode" img-attr="nodeImageAttr" start="neighborNodeStartData" end="neighborNodeEndData" duration="175" ease="" finish="finishNeighborAnimation()")
