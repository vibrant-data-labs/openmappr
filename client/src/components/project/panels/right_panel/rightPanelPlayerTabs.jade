.right-panel__tabs.side-menu
  .side-menu__logo
    .logo
      img.logo__image(src="/img/logo-light_horizontal.svg" alt="Vibrant Logo")/

  .side-menu__body
    ul.tabs-menu
      li.tabs-menu__item(
        ng-repeat="tab in rightPanelTabs" ng-click="tab.cmd()"
        ng-class="{'tabs-menu__item_active': tab.panel === panelUI.currentPanelOpen}"
        )

        span.tabs-menu__link(
          data-toggle="tooltip" 
          uib-tooltip="{{tab.title}}: {{tab.tooltipTitle}}" 
          tooltip-placement="right" 
          class='tabs-menu__link_{{tab.iconClass}}')
          span.tabs-menu__badge(ng-if="tab.showSelCount && selNodesCount !== 0") {{selNodesCount}}

    .right-panel__divider


  .side-menu__footer
    ul.tabs-menu
      li.tabs-menu__item(
        ng-click="toggleInfo()"
        ng-class="{'tabs-menu__item_active': panelUI.currentPanelOpen === 'modal'}"
        )

        span.tabs-menu__link.tabs-menu__link_info( 
          data-toggle="tooltip" 
          uib-tooltip="Info: See project information"
          tooltip-placement="right")

      li.tabs-menu__item(ng-click="toggleForm()")
        span.tabs-menu__link.tabs-menu__link_feedback( 
          data-toggle="tooltip" 
          uib-tooltip="Feedback & Bugs"
          tooltip-placement="right")

      li.tabs-menu__item(ng-click="exportCurrentData()")
        span.tabs-menu__link.tabs-menu__link_export( 
          data-toggle="tooltip" 
          uib-tooltip="Export current selection"
          tooltip-placement="right")
