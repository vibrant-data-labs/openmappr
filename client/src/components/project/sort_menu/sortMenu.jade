	button.card__action-sort(
		ng-class="{ 'up': sortConfig && sortConfig.sortOrder === 'asc' }", 
		ng-click="setSortOrder(sortConfig.sortOrder, $event)"
		uib-tooltip="Reverse Order",
		tooltip-placement="bottom-left", 
		tooltip-append-to-body="true"
	)

	span(uib-dropdown dropdown-append-to-body)
		span(uib-dropdown-toggle auto-close="outsideClick" ng-click="keepDrawerOpen = true;" uib-tooltip="Sort Options", tooltip-placement="right" tooltip-append-to-body="true")
			span.text-link.text-capitalize {{getSortTypeLabel(sortConfig.sortType)}}
		.uib-dropdown-menu.uib-dropdown-menu-flexing(uib-dropdown-menu, ng-class="{'dropdown-menu-right': alignToRight}")
			.uib-dropdown-click-close(ng-click="keepDrawerOpen = false;")
			//- inline style to center dropdowns
			.uib-dropdown-flex-content
				.uib-dropdown-triangle
				.uib-dropdown-flex.center
					ul.dd-list.list-unstyled
						li.row.vert-align.pointable-cursor(ng-repeat="sortType in sortTypes" ng-click="setSortType(sortType.id, $event)")
							.col-xs-12
								h6.no-margin.text-capitalize {{::sortType.title}}
